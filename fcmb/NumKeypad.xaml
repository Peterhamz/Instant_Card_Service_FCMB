                </Border>
            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="zero" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="57,358,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="38" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="155" BorderBrush="{x:Null}" Height="65" Click="zero_Click">
                <Border CornerRadius="25,25,25,25"  Width="50" Height="50" BorderThickness="0,0,0,0">
                    <TextBlock Text="0" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Padding="0" Foreground="White" Height="50" VerticalAlignment="Center" Margin="0,0,0,0" Width="50"/>
