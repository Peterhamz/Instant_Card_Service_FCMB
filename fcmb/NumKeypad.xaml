            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="bks" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="237,358,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="20" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="65" BorderBrush="{x:Null}" Height="65" Click="bks_Click">
                <Border CornerRadius="25,25,25,25"  Width="50" Height="50" BorderThickness="0,0,0,0">
                    <TextBlock Text="BKS" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Padding="0,10,0,0" Foreground="White" Height="50" VerticalAlignment="Center" Margin="0,0,0,0" Width="50"/>
                </Border>
            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="enter" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="366,190,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="20" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="114" BorderBrush="{x:Null}" Height="233" Click="enter_Click">
                <Border CornerRadius="25,25,25,25"  Width="50" Height="50" BorderThickness="0,0,0,0">
                    <TextBlock Text="Enter" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Padding="0,10,0,0" Foreground="White" Height="50" VerticalAlignment="Center" Margin="0,0,0,0" Width="50"/>
                </Border>
            </Button>
        </Grid>
    </Viewbox>

</Window>
