            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="five" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="147,190,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="38" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="65" BorderBrush="{x:Null}" Height="65" Click="five_Click">
