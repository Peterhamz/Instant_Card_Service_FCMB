                </Border>
            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="nine" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="237,273,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="38" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="65" BorderBrush="{x:Null}" Height="65" Click="nine_Click">
