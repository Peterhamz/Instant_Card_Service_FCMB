                </Border>
            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="four" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="57,190,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="38" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="65" BorderBrush="{x:Null}" Height="65" Click="four_Click">
                <Border CornerRadius="25,25,25,25"  Width="50" Height="50" BorderThickness="0,0,0,0">
