            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="seven" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="57,273,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="38" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="65" BorderBrush="{x:Null}" Height="65" Click="seven_Click">
                <Border CornerRadius="25,25,25,25"  Width="50" Height="50" BorderThickness="0,0,0,0">
                    <TextBlock Text="7" HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Padding="0" Foreground="White" Height="50" VerticalAlignment="Center" Margin="0,0,0,0" Width="50"/>
                </Border>
            </Button>
            <Button Style="{StaticResource MyButton}" x:Name="eight" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="147,273,0,0" VerticalAlignment="Top" Cursor="Hand" FontSize="38" Background="#FF333333" UseLayoutRounding="True" Foreground="White" BorderThickness="0" Width="65" BorderBrush="{x:Null}" Height="65" Click="eight_Click">
                <Border CornerRadius="25,25,25,25"  Width="50" Height="50" BorderThickness="0,0,0,0">
